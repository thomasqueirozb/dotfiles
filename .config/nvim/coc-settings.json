{
    "languageserver": {
      "ccls": {
        "command": "ccls",
        "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp", "cu"],
        "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/", "compile_flags.txt"],
        "initializationOptions": {
            "cache": {
              "directory": "/tmp/ccls"
            }
          }
      }
    }
}
