; Only applies if <ramp> is used
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 
ramp-6 = 

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-prefix-foreground = #7a7171
;format-underline = #f90000
; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label> <ramp-coreload>

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = %percentage%%
label-foreground = #ffffff

; Spacing between individual per-core ramps
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-0-foreground = #00ff73
ramp-coreload-1 = ▂
ramp-coreload-1-foreground = #00ff15
ramp-coreload-2 = ▃
ramp-coreload-2-foreground = #3cff00
ramp-coreload-3 = ▄
ramp-coreload-3-foreground = #88ff00
ramp-coreload-4 = ▅
ramp-coreload-4-foreground = #f2ff00
ramp-coreload-5 = ▆
ramp-coreload-5-foreground = #f2ff00
ramp-coreload-6 = ▇
ramp-coreload-6-foreground = #ff9500
ramp-coreload-7 = █
ramp-coreload-7-foreground = #ff0000

