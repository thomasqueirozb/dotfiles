[module/cpuclock]
type = custom/script
interval = 0.5
exec = lscpu | awk '/^CPU MHz:/ {printf "%.1f", $3/1000; exit}'

label = %output% GHz
label-foreground = #ffffff
format-prefix = ""
format-prefix-foreground = #56aaea
format-prefix-margin-right = 1

