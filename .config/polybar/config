[settings]
pseudo-transparency = true
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[colors]
background = #000000
background-alt = #ffffff
foreground = #3299a8
foreground-alt = #ffffff
primary = #ffb52a
secondary = #e60053
alert = #bf0000

[bar/bar]
monitor = ${env:MONITOR:}
width = 100%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

border-size = 0
border-color = #00000000

module-margin-left = 1
module-margin-right = 1


font-0 = "monospace:pixelsize=12;2"
font-1 = "Material Icons:size=13;4"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=11;1"

modules-left = i3 memory temperature cpuclock cpu
modules-center = clock date kbd
modules-right = pkg pulseaudio backlight battery powermenu
tray-position = right
tray-padding = 4

tray-detached = false

wm-restack = i3
# override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/logout]
type = custom/text
click-left = $(echo -n "systemctl suspend & slock\nslock\nsystemctl suspend\nsystemctl hibernate\ni3-msg exit\nsystemctl poweroff" | dmenu -l 6)
content = 
content-foreground = #ff0000

[module/avg-battery]
type = custom/script
